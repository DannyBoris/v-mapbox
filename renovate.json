{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "meteor": {
    "enabled": false
  },
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)",
    ":gitSignOff",
    ":pinDevDependencies",
    ":preserveSemverRanges",
    ":widenPeerDependencies"
  ],
  "reviewers": ["vinayakkulkarni"],
  "assignees": ["vinayakkulkarni"],
  "labels": ["dependencies"],
  "autoApprove": true,
  "rangeStrategy": "bump"
}
